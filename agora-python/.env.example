# Пример файла конфигурации для AudioService
# Скопируйте этот файл в .env и настройте под свои нужды

# ========================================
# Настройки сервера
# ========================================

# Порт для прослушивания gRPC сервера
AUDIO_SERVICE_PORT=50052

# Версия сервиса (01, 02, и т.д.)
AUDIO_SERVICE_VERSION=01

# Максимальное количество worker потоков
AUDIO_SERVICE_MAX_WORKERS=10

# Адрес для прослушивания (по умолчанию все интерфейсы)
AUDIO_SERVICE_HOST=[::]

# ========================================
# Настройки хранилища файлов
# ========================================

# Директория для сохранения загруженных файлов
AUDIO_SERVICE_UPLOAD_DIR=uploads

# Создавать ли поддиректории по датам (true/false)
AUDIO_SERVICE_USE_DATE_SUBDIRS=false

# Максимальный размер файла в байтах (100 MB)
AUDIO_SERVICE_MAX_FILE_SIZE=104857600

# ========================================
# Настройки валидации
# ========================================

# Строгая проверка расширений файлов (true/false)
AUDIO_SERVICE_STRICT_FORMAT=true

# ========================================
# Настройки стриминга
# ========================================

# Размер чанка для стриминга в байтах (64 KB)
AUDIO_SERVICE_CHUNK_SIZE=65536

# Таймаут для получения чанка в секундах
AUDIO_SERVICE_CHUNK_TIMEOUT=30

# ========================================
# Настройки логирования
# ========================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
AUDIO_SERVICE_LOG_LEVEL=INFO

# Формат логов
AUDIO_SERVICE_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Путь к файлу логов (оставьте пустым для вывода только в консоль)
# AUDIO_SERVICE_LOG_FILE=logs/audio_service.log

# Максимальный размер файла логов в байтах (10 MB)
AUDIO_SERVICE_LOG_FILE_MAX_SIZE=10485760

# Количество файлов логов для ротации
AUDIO_SERVICE_LOG_FILE_BACKUP_COUNT=5

# ========================================
# Настройки безопасности
# ========================================

# Включить TLS/SSL (true/false)
AUDIO_SERVICE_ENABLE_TLS=false

# Путь к серверному сертификату
# AUDIO_SERVICE_TLS_CERT=certs/server.crt

# Путь к приватному ключу
# AUDIO_SERVICE_TLS_KEY=certs/server.key

# Путь к корневому сертификату CA
# AUDIO_SERVICE_TLS_CA_CERT=certs/ca.crt

# ========================================
# Настройки производительности
# ========================================

# Включить сжатие gRPC (true/false)
AUDIO_SERVICE_ENABLE_COMPRESSION=true

# Максимальный размер сообщения для отправки (в байтах, 100 MB)
AUDIO_SERVICE_MAX_SEND_MSG=104857600

# Максимальный размер сообщения для получения (в байтах, 100 MB)
AUDIO_SERVICE_MAX_RECV_MSG=104857600

# ========================================
# Настройки мониторинга
# ========================================

# Включить метрики Prometheus (true/false)
AUDIO_SERVICE_ENABLE_METRICS=false

# Порт для метрик Prometheus
AUDIO_SERVICE_METRICS_PORT=9090

# ========================================
# Дополнительные настройки
# ========================================

# Включить режим отладки (true/false)
AUDIO_SERVICE_DEBUG=false

# Префикс для имен сохраненных файлов
AUDIO_SERVICE_FILE_PREFIX=

# Добавлять ли timestamp к именам файлов (true/false)
AUDIO_SERVICE_ADD_TIMESTAMP=true
